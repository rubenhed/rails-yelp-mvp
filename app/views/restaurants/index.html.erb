
<div class="container p-3 border border-primary">
  <h1 class="mb-3">Restaurants</h1>
  <% @restaurants.each do |rest| %>
    <p>
      <span class="fw-bold">Name:</span> <%= link_to rest.name, restaurant_path(rest) %><br>
      <span class="fw-bold">Address:</span> <%= rest.address %><br>
      <span class="fw-bold">Category:</span> <%= rest.category %>
    </p>
  <% end %>
</div>


