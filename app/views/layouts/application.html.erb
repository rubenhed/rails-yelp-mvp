  </head>

  <body>
    <nav class="navbar navbar-dark navbar-expand-lg bg-dark">
      <div class="container">
        <ul class="navbar-nav gap-3">
          <li class="nav-item">
            <a class="nav-link" href="/restaurants">List all Restaurants</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/restaurants/new">Create new Restaurant</a>
          </li>
        </ul>
      </div>
    </nav>

    <%= yield %>
